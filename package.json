{
  "name": "dogecoin-spv",
  "version": "0.3.0",
  "description": "Dogecoin SPV wallet (beta)",
  "keywords": [
    "dogecoin",
    "spv",
    "spvnode"
  ],
  "author": "Lola Rigaut-Luczak <me@laflemme.lol>",
  "license": "WTFPL",
  "main": "./bin/main.js",
  "scripts": {
    "start": "DEBUG=* node src/main.js",
    "dev": "DEBUG=*,-nodemon:*,-nodemon nodemon src/main.js",
    "clean": "rm -rf data",
    "test": "NETWORK=testnet nyc ava",
    "generate": "node test/tools/generate.js",
    "lint": "standard",
    "docs:dev": "vuepress dev documentation",
    "docs:build": "vuepress build documentation"
  },
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "docs/*"
    ]
  },
  "bin": {
    "dogecoin-spv": "./bin/main.js"
  },
  "ava": {
    "verbose": true,
    "files": [
      "test/integration/*.test.js",
      "test/unit/*.test.js"
    ]
  },
  "standard": {
    "ignore": [
      "test/**",
      "docs/**"
    ]
  },
  "files": [
    "src/*",
    "bin/*",
    "README.md",
    "package-lock.json"
  ],
  "devDependencies": {
    "ava": "^3.12.1",
    "caxa": "^1.0.0",
    "dockerode": "^3.3.0",
    "nodemon": "^2.0.12",
    "nyc": "^15.1.0",
    "standard": "^16.0.3",
    "vuepress": "^1.8.2"
  },
  "dependencies": {
    "bip32": "^2.0.3",
    "bip39": "^3.0.4",
    "bitcoin-merkle-proof": "^0.1.0",
    "bloom-filter": "^0.2.0",
    "bs58": "^4.0.1",
    "bs58check": "^2.1.1",
    "clipboardy": "^2.3.0",
    "debug": "^4.1.1",
    "ecdsa": "^0.7.0",
    "exp-net": "0.0.1",
    "level": "^7.0.0",
    "meow": "^6.1.0",
    "multicast-dns": "^7.0.0",
    "promise.any": "^2.0.2",
    "ripemd160": "^2.0.1",
    "secp256k1": "^4.0.2"
  }
}
